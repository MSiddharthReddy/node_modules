{
  "globals": {
    "__DEV__": true
  },
  "plugins": [
    "react-native"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".android.js",
          ".ios.js"
        ]
      }
    }
  },
  "rules": {
    "react-native/no-unused-styles": "error",
    "react-native/split-platform-components": "off",
    "react-native/no-inline-styles": "error",
    "react-native/no-color-literals": "error"
  }
}
